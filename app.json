{
  "expo": {
    "name": "Linterna",
    "slug": "boton-panico",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/iconos/ios/AppIcon@3x.png",
    "scheme": "bt-felcv",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/iconos/ios/AppIcon@3x.png",
      "backgroundColor": "#009688",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/iconos/ios/AppIcon@3x.png",
      "bundleIdentifier": "com.felcv.botonpanico",
      "infoPlist": {
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/iconos/android/res/mipmap-xxxhdpi/ic_launcher_foreground.png",
        "backgroundImage": "./assets/images/iconos/android/res/mipmap-xxxhdpi/ic_launcher_background.png",
        "backgroundColor": "#ffffff"
      },
      "icon": "./assets/images/iconos/android/res/mipmap-xxxhdpi/ic_launcher.png",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "package": "com.felcv.botonpanico",
      "googleServicesFile": "./google-services.json",
      "softwareKeyboardLayoutMode": "pan"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Esta aplicación necesita acceso a tu ubicación para mostrar tu posición en el mapa y enviar alertas de emergencia precisas.",
          "locationAlwaysAndWhenInUsePermission": "Esta aplicación necesita acceso continuo a tu ubicación para enviar tu posición durante emergencias, incluso cuando la app está en segundo plano.",
          "isAndroidBackgroundLocationEnabled": true,
          "isIosBackgroundLocationEnabled": true
        }
      ],
      "expo-notifications",
      "expo-font",
      "@maplibre/maplibre-react-native",
      [
        "expo-build-properties",
        {
          "android": {
            "useLegacyPackaging": false,
            "extraProguardRules": "-keep class com.mapbox.** { *; }\n-keep class com.maplibre.** { *; }",
            "packagingOptions": {
              "pickFirst": [
                "lib/x86/libc++_shared.so",
                "lib/x86_64/libc++_shared.so",
                "lib/armeabi-v7a/libc++_shared.so",
                "lib/arm64-v8a/libc++_shared.so"
              ]
            }
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "25eb477d-40aa-4a10-927c-07847a4df6c9"
      },
      "EXPO_PUBLIC_ALERTAS_URL": "http:localhost:3001"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/25eb477d-40aa-4a10-927c-07847a4df6c9"
    }
  }
}
